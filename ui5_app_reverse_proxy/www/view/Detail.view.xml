<mvc:View	controllerName="linklaters.com.customexpensesapp.view.Detail"	xmlns:mvc="sap.ui.core.mvc"	xmlns:core="sap.ui.core"	xmlns="sap.m"><Page		showNavButton="{device>/isPhone}"		navButtonPress="onNavBack"		class="sapUiFioriObjectPage"		title="{ExpenseYear} / {ExpenseMonth}">		<content><ObjectHeader				title="{				    path : 'EmployeeNumber',				    formatter: 'linklaters.com.customexpensesapp.util.Formatter.removeInitialZeros'				    }"				number="{					path: 'TotalAmount',					formatter: 'linklaters.com.customexpensesapp.util.Formatter.currencyValue'				}"				numberUnit="USD">												</ObjectHeader><IconTabBar				select="onDetailSelect"				id="idIconTabBar">				<items>					<IconTabFilter						key="expenseItems"						text="Expense Items"						icon="sap-icon://supplier">						<content>							<Table id="idProductsTable"						           inset="false" 						           items = "{MyExpenseItemSet}"						           updateFinished=".onTableUpdateFinished">						        <headerToolbar>                                     <Toolbar>                                         <Title text="Expense Items" level="H2"/>                                    </Toolbar>                                 </headerToolbar>                                 <columns>                                  <Column width="12em">                                    <Text text="Type" />                                  </Column>                                  <Column  minScreenWidth="Tablet" demandPopin="true">                                    <Text text="Description" />                                  </Column>                                  <Column   minScreenWidth="Tablet" demandPopin="true" hAlign="Right">                                    <Text text="Location" />                                  </Column>                                  <Column  minScreenWidth="Tablet" demandPopin="true" hAlign="Center">                                    <Text text="Amount" />                                  </Column>                                                                 </columns>                                <items>                                  <ColumnListItem>                                    <cells>                                        <Text text="{ExpenseType}" />                                        <Text text="{Description}" />                                        <Text text="{Location}" />                                        <Text text="{Amount}" />                                    </cells>                                  </ColumnListItem>                                </items>                            </Table>						</content>					</IconTabFilter>					<IconTabFilter						key="approval"						text="Approvals"						icon="sap-icon://hint">											</IconTabFilter>				</items>			</IconTabBar></content>		<footer>			<Bar>				<contentRight>			    <Button xmlns="sap.m"			    	text=""			    	icon="sap-icon://add"			    	tap="onAddExpenseItem">			    </Button>			    <Button xmlns="sap.m"			    	text="Submit"				type="Accept"			    	tap="onSubmitExpenseRequest">			    </Button>			    </contentRight>			</Bar>		</footer>	</Page></mvc:View>